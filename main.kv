<MyApp>:
    orientation: "vertical"
    padding: 20
    spacing: 20

    Label:
        id: label
        text: "Enter something below:"
        font_size: 24
        size_hint_y: 0.2

    TextInput:
        id: text_input
        hint_text: "Type here"
        font_size: 20
        multiline: False
        size_hint_y: 0.3

    Button:
        text: "Submit"
        font_size: 20
        size_hint_y: 0.2
        on_press: root.on_button_click()
